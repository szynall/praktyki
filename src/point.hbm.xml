<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="program.Point" table="Point">

        <id name="id" column="ID">
            <generator class="native" />
        </id>

        <property name="x">
            <column name="X"/>
        </property>

        <property name="y">
            <column name="Y"/>
        </property>

        <property name="z">
            <column name="Z"/>
        </property>

    </class>
</hibernate-mapping>
